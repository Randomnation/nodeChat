doctype html
html
    head
        title Pyweb Chat
        meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no')

        link(rel="stylesheet" href="/stylesheets/bootstrap.min.css")      
        link(rel="stylesheet" href="/stylesheets/style.css")
        link(rel="stylesheet" href="/stylesheets/fontawesome-all.min.css")
        script(src='/javascripts/jquery-3.2.1.min.js')
        script(src='/javascripts/bootstrap.min.js')
        script(src='/client.js')
        script(src='/socket.io/socket.io.js')
        script(src='/javascripts/custom.js')

    body
        div.fake-hidden
            i.fa.fa-square-o.fa-3x
        ul.pages
            li.chat.page
                nav.navbar.fixed-top.navbar-white
                    a.navbar-brand Welcome To Pyweb Chat!
                    span.navbar-text
                        span#disconnect(style="margin-right: 10px;").d-none
                            i.fa.fa-exclamation-triangle.text-warning
                        span#participants(data-toggle="popover" title="Popover title" data-content="And here's some amazing content. It's very engaging. Right?").badge-pill.badge-light
                div.container-fluid
                    div.row
                        div.col
                            div.chatArea
                                table
                                    tbody.messages
                input#message.inputMessage(placeholder="Type here...")
            li.login.page
                div.form
                    h3.title What's your nickname?
                    input#username.usernameInput(type="text" maxlenght="14")